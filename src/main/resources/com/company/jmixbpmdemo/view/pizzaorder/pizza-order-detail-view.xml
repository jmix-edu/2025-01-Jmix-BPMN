<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://pizzaOrderDetailView.title"
      focusComponent="form">
    <data>
        <instance id="pizzaOrderDc"
                  class="com.company.jmixbpmdemo.entity.PizzaOrder">
            <fetchPlan extends="_base">
                <property name="orderLines" fetchPlan="_base"/>
                <property name="initiatior" fetchPlan="_base"/>
                <property name="approver" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="pizzaOrderDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="pizzaOrderDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityPicker id="initiatiorField" property="initiatior">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="approverField" property="approver">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="deliveryNumberField" property="deliveryNumber"/>
            <dateTimePicker id="openedField" property="opened"/>
            <dateTimePicker id="closedField" property="closed"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
